  build-depends:       base >=4.9 && <4.10
                     , transformers
                     , containers
                     , comonad
                     , vector
                     , ipasir
  hs-source-dirs:      src
  default-language:    Haskell2010
  extra-libraries:     pblib
                     , stdc++
